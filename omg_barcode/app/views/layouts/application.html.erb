<!DOCTYPE html>
<html>
  <head>
    <title>OmgBarcode</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <ul>
      <% if flash[:success] %>
        <li><%= flash[:success].first %></li>
      <% elsif flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
